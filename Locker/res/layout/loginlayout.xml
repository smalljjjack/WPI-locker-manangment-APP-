<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/red"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:text="Welcome To WPI LockerSystem"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/usertype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:text="UserType"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/usertype_spn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:entries="@array/usertype_array"
            android:prompt="@string/ChooseaType"
            android:textColor="@color/lightgray"
            android:textSize = "18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120sp"
            android:layout_weight="0.21"
            android:text="Userid"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/enteruserid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned"
            android:textSize="18sp"
            android:textColor="@color/lightgray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120sp"
            android:text="password"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/enterpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor = "@color/lightgray"
            android:inputType="numberPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40sp"
        android:orientation="vertical">

        <Button
            android:id="@+id/login_btn"
            android:layout_width="151dp"
            android:layout_height="58dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="200dp"
            android:text="Loginnow"
            android:textAllCaps="false"
            android:textSize="22sp" />

        <Button
            android:id="@+id/retrievepassword_btn"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="180dp"
            android:text="ForgetPassword"
            android:textAllCaps="false"
            android:textSize="22sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="12.22"
            android:background="@mipmap/logo0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>